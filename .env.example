# Database Configuration
DATABASE_URL=your_postgresql_connection_string

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Frontend URL (for CORS and links)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# AWS S3 Configuration for File Uploads
MY_AWS_ACCESS_KEY_ID=your_aws_access_key_id
MY_AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
MY_AWS_S3_BUCKET_NAME=your_s3_bucket_name
MY_AWS_REGION=your_aws_region

# Email Service (AWS SES)
SES_REGION=your_ses_region
SES_FROM_EMAIL=noreply@yourdomain.com

# Stripe Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Environment
NODE_ENV=production
